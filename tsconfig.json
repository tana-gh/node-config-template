{
  "compilerOptions": {
    "target"   : "ES2015",
    "module"   : "ES2015",
    "lib"      : ["DOM", "ES2015"],
    "jsx"      : "react",
    "sourceMap": true,
    "strict"   : true,
    "noImplicitReturns"           : true,
    "noFallthroughCasesInSwitch"  : true,
    "allowSyntheticDefaultImports": true,
    "moduleResolution"            : "node",
    "experimentalDecorators"      : true,
    "emitDecoratorMetadata"       : true,
    "forceConsistentCasingInFileNames": true
  },
  "include": [
    "build/**/*",
    "src/**/*"
  ],
  "exclude": [
    "node_modules",
    "**/*.spec.*"
  ]
}
